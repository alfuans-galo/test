
<div class="row">
  <div class="col-sm-12 text-xs-center bootstrap-welcome">
    <h1>Welcome <%= current_user.name %> <%= current_user.surname %> (<%= current_user.email %>)</h1>
    <div class="row">
      <div class="col-md-3 col-sm-3 col-xs-6">    
        <% if current_user.avatar.to_s != "" %>
          <%= image_tag current_user.avatar_url, :height => 150, class: "img-responsive" %>
        <% end %>
      </div>
    </div>

    <p><%= link_to 'edit profile', edit_user_registration_path(current_user) %></p>
    <p><%= link_to 'logout', eval("destroy_#{current_user.type.downcase}_session_path"), method: :delete %></p>

  </div>
</div>
